/*
Exercício 1

package javaapplication6;

import java.util.Scanner;

public class JavaApplication6 {

    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        System.out.printf("Digite um valor para o lado do quadrado: ");
        int n = input.nextInt();
        for(int i=0; i<n; i++){
            //verificando se é o primeiro ou última linha da impressão
            if(i==0 || i+1==n){
                for(int x=1; x<=n;x++){
                    System.out.printf("*"); //se for imprime * em linha
                }System.out.println("");
            }else{//se não for imprime * com quebra de linha
                for(int y=0; y<2;y++){
                  System.out.printf("*");
                  for(int z=1; z<n-1; z++){
                      System.out.printf(" ");
                  }
                 
                  
                }System.out.println("");
            }
        }

    }
}
